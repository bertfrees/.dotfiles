[extdiff]
# Emacs (Linux)
cmd.ediff = sh
opts.ediff = -c 'if [ -d $0 ]; then emacs --eval "(ediff-directories \"$0\" \"$1\" \"\")"; else emacs --eval "(ediff-files \"$0\" \"$1\")"; fi'
# TextWrangler (Mac)
cmd.twdiff = /usr/local/bin/twdiff
opts.twdiff = --resume --wait --reverse
# FileMerge (Mac)
cmd.fmdiff = Applications/MacHg.app/Contents/Resources/fmdiff.sh
